# Auth Service Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400 # 24 hours in seconds

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tourist_safety

# Database Pool Configuration
DB_POOL_MAX=20                # Maximum number of clients in the pool
DB_IDLE_TIMEOUT=30000         # How long a client is allowed to remain idle (ms)
DB_CONNECTION_TIMEOUT=5000    # How long to wait for a connection (ms)

# Database Health Check Configuration
DB_HEALTH_CHECK_INTERVAL=30000  # Interval between health checks (ms)
DB_UNHEALTHY_THRESHOLD=3        # Number of consecutive failures to mark as unhealthy

# External Services
BLOCKCHAIN_API_URL=http://localhost:5002

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10